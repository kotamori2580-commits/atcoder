#include <bits/stdc++.h>
using namespace std;


int main(){
  int N,K;
  long long X;
  cin >> N >> K >> X;
  vector<long long> A(N);
  for(int i=0;i<N;i++){
    cin >> A[i];
  }
  sort(A.begin(), A.end(), greater<long long>());
  
  int ans=0;
  long long total=0;
  for(int i=0;i<N;i++){
    ans ++;
    if(i<(N-K)){
      continue;
    }
    else{
      total+=A[i];
      if(total>=X){
        break;
      }
    }
  }
  if(total>=X){
    cout << ans << "\n";
  }
  else{
    cout << "-1" << "\n";
  }
}
