#include <bits/stdc++.h>
using namespace std;

long long age[100000000];
long long dp[100000009];

int main(){
  long long N,K;
  cin >> N >> K;
  long long i=0;
  age[0] = N;
  dp[0] = N;
  while(dp[i]<K){
    age[i+1] = age[i]+1;
    dp[i+1] = dp[i] + age[i+1];
    i++;
  }
  cout << i << "\n";
}
