#include <bits/stdc++.h>
using namespace std;

int main(){
  int l;
  cin >> l;
  vector<int> vec;
  for(int i =0;i<l;i++){
    int a;
    cin >> a;
    vec.push_back(a);
  }
  int b;
  int c;
  for(int i=0;i<l;i++){
    if(vec.at(i)==1){
      b = i;
      break;
    }
  }
  for(int i=0;i<l;i++){
    if(vec.at(l-1-i)==1){
      c = l-1-i;
      break;
    }
  }
  cout << c-b << "\n";
}
