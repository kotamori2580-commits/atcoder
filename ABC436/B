#include <bits/stdc++.h>
using namespace std;

long long mod(long long a, long long m) {
  return (a % m + m) % m;
}

int main(){
  int N;
  cin >> N;
  vector<vector<int>> data(N, vector <int>(N));
  for (int i=0;i<N;i++){
    for (int j=0;j<N;j++){
      data.at(i).at(j) = 0;
    }
  }
  
  //ベースケース
  int r=0;
  int c=(N-1)/2;
  data.at(r).at(c) = 1;
  int k =1;
  
  //ループ処理
  for(int n=1;n<N*N;n++){
    if(data.at(mod(r-1,N)).at(mod(c+1,N)) == 0){
      data.at(mod(r-1,N)).at(mod(c+1,N)) = k+1;
      r = mod(r-1,N);
      c = mod(c+1,N);
      k = k+1;
    }
    else{
      data.at(mod(r+1,N)).at(c) = k+1;
      r = mod(r+1,N);
      k = k+1;
    }
  }
  for (int i=0; i<N; i++){
    for (int j=0; j<N; j++){
      if(j < N-1){
        cout << data.at(i).at(j) << " ";
      }   
      else{
        cout << data.at(i).at(j) << endl;
      }
    }
  }
}
